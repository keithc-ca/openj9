<project name="DDR_VM" default="main" basedir=".">

	<macrodef name="tostring">
		<attribute name="ref" />
		<attribute name="var" />
		<attribute name="prefix" default="" />
		<attribute name="suffix" default="" />
		<sequential>
			<property name="@{var}" value="@{prefix}${toString:@{ref}}@{suffix}" />
		</sequential>
	</macrodef>

	<target name="setup">
		<property name="up3" location="../../.." />

		<dirset id="dir-a" dir="${up3}">
			<include name="*jdk11/build/*/support/ddr/classes" />
		</dirset>

		<dirset id="dir-b" dir="${up3}">
			<include name="build/*/support/ddr/classes" />
		</dirset>

		<condition property="dir-id" value="dir-a" else="dir-b">
			<resourcecount refid="dir-a" when="equal" count="1" />
		</condition>

		<condition property="dir-good">
			<resourcecount refid="${dir-id}" when="equal" count="1" />
		</condition>

		<fail message="Can't locate support/ddr/classes" unless="dir-good" />

		<echo message="dir-a: ${toString:dir-a}" />
		<echo message="dir-b: ${toString:dir-b}" />
		<tostring var="classes-dir" prefix="${up3}/" ref="${dir-id}" />
	</target>

	<target name="main" depends="setup">
		<property name="generated.jar" location="generated.jar" />

		<jar basedir="${classes-dir}" compress="true" destfile="${generated.jar}" filesonly="true">
			<include name="**/*.class" />
		</jar>
	</target>

</project>
